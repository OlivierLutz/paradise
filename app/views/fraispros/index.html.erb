          <colgroup>
          <col class="quarante" />
          <col class="cinq" />
          <col class="cinq" />
          <col class="dix" />
          <col class="cinq" />
          <col class="cinq" />
          <col class="dix" />
          <col class="vingt" />
        </colgroup>
